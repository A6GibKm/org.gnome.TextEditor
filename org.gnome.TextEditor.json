{
    "id": "org.gnome.TextEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-text-editor",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libeditorconfig",
            "buildsystem": "cmake",
            "config-opts": [
                "-DBUILD_DOCUMENTATION=OFF",
                "-DINSTALL_HTML_DOC=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/editorconfig/editorconfig-core-c.git",
                    "tag": "v0.12.6"
                }
            ]
        },
        {
            "name": "gnome-text-editor",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-text-editor/45/gnome-text-editor-45.2.tar.xz",
                    "sha256": "0e2552fdb3025446cdad9d59b13d75df9a653fc3ea1dc43b919e0f6fa8a846ac",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-text-editor"
                    }
                }
            ]
        }
    ]
}
