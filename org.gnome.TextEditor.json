{
    "app-id" : "org.gnome.TextEditor",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-text-editor",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "commit" : "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "commit" : "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit" : "63d2d673fcf7eb390f7d525c721048639175d044"
                }
            ]
        },
        {
            "name" : "gtksourceview",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "commit": "8f132de6d4128c42b6177617772d9ac6f62dace1"
                }
            ]
        },
        {
            "name" : "gnome-text-editor",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/chergert/gnome-text-editor.git",
                    "commit" : "037777592bf6524edacfe43a1af70aec4115ea64"
                }
            ]
        }
    ]
}
